<%= render 'shared/error', item: @user %>

<div class='well'>
  <%= form_for @user do |f| %>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username %>      
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>      
    </div>
    <div class='control-group'>
      <%= f.label :password_confirmation, "Confirm Password"%>
      <%= f.password_field :password_confirmation %>      
    </div>
    <%= f.submit(@user.new_record? ? "Create Profile" : "Update Profile", class: 'btn btn-primary') %>
  <% end %>
</div>